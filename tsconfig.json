{
  "compilerOptions": {
    // Default
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "isolatedModules": false,

    "baseUrl": "./packages",
    "paths": {
      "@nomico/core/ui/*": ["./packages/nomico-ui/*"],
      "@nomico/core/ui": ["./packages/nomico-ui"],
      "@nomico/core/hooks/*": ["packages/nomico-hooks/*"],
      "@nomico/core/hooks": ["packages/nomico-hooks"],
    },
  }
}